{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "AWS::CloudFormation::Designer": {
      "14659982-3536-43af-8f46-aaed4182b605": {
        "size": {
          "width": 60,
          "height": 60
        },
        "position": {
          "x": 440,
          "y": 60
        },
        "z": 0,
        "embeds": []
      }
    }
  },
  "Parameters": {
    "domain": {
      "Type": "String",
      "Default": "tonghuilin.com",
      "AllowedValues": ["tonghuilin.com"],
      "Description": "Route 53 domain name"
    },
    "env": {
      "Type": "String",
      "Default": "stage",
      "AllowedValues": ["stage", "prod"],
      "Description": "Environment name"
    },
    "app": {
      "Type": "String",
      "Default": "site",
      "AllowedValues": ["site"],
      "Description": "Application name"
    },
    "dept": {
      "Type": "String",
      "Default": "english",
      "AllowedValues": ["english"],
      "Description": "Department name"
    }
  },
  "Conditions": {
    "IsProd": { "Fn::Equals": [{"Ref": "env"}, "prod"] }
  },
  "Resources": {
    "S3BucketPipeline": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "dept"
              },
              {
                "Ref": "app"
              },
              {
                "Ref": "env"
              },
              "pipeline"
            ]
          ]
        },
        "AccessControl": "Private",
        "Tags": [
          {
            "Key": "dept",
            "Value": {
              "Ref": "dept"
            }
          },
          {
            "Key": "app",
            "Value": {
              "Ref": "app"
            }
          },
          {
            "Key": "env",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    },
    "S3BucketSite": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            ".",
            [
              {
                "Ref": "env"
              },
              {
                "Ref": "domain"
              }
            ]
          ]
        },
        "AccessControl": "Private",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        },
        "Tags": [
          {
            "Key": "dept",
            "Value": {
              "Ref": "dept"
            }
          },
          {
            "Key": "app",
            "Value": {
              "Ref": "app"
            }
          },
          {
            "Key": "env",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    },
    "S3BucketSitePolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": {
          "Ref": "S3BucketSite"
        },
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": ["s3:GetObject"],
              "Resource": [{
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Fn::Join": [
                        ".",
                        [{ "Ref": "env" }, { "Ref": "domain"}]
                      ]
                    },
                    "/*"
                  ]
                ]
              }],
              "Principal": {
                "AWS": "*"
              }
            }
          ]
        }
      },
      "DependsOn": "S3BucketSite"
    }
  },
  "Outputs": {
    "SiteURL": {
      "Value": {
        "Fn::GetAtt": [
          "S3BucketSite",
          "WebsiteURL"
        ]
      },
      "Description": "URL for website hosted on S3"
    }
  }
}
