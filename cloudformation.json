{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Metadata": {
    "AWS::CloudFormation::Designer": {
      "14659982-3536-43af-8f46-aaed4182b605": {
        "size": {
          "width": 60,
          "height": 60
        },
        "position": {
          "x": 440,
          "y": 60
        },
        "z": 0,
        "embeds": []
      }
    }
  },
  "Parameters": {
    "env": {
      "Type": "String",
      "Default": "stage",
      "AllowedValues": ["stage", "prod"],
      "Description": "Environment name"
    },
    "app": {
      "Type": "String",
      "Default": "site",
      "AllowedValues": ["site"],
      "Description": "Application name"
    },
    "dept": {
      "Type": "String",
      "Default": "english",
      "AllowedValues": ["english"],
      "Description": "Department name"
    }
  },
  "Resources": {
    "S3BucketPipeline": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              "pipeline",
              {
                "Ref": "dept"
              },
              {
                "Ref": "app"
              },
              {
                "Ref": "env"
              }
            ]
          ]
        },
        "AccessControl": "Private",
        "Tags": [
          {
            "Key": "dept",
            "Value": {
              "Ref": "dept"
            }
          },
          {
            "Key": "app",
            "Value": {
              "Ref": "app"
            }
          },
          {
            "Key": "env",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    },
    "S3BucketSite": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "dept"
              },
              {
                "Ref": "app"
              },
              {
                "Ref": "env"
              }
            ]
          ]
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        },
        "Tags": [
          {
            "Key": "dept",
            "Value": {
              "Ref": "dept"
            }
          },
          {
            "Key": "app",
            "Value": {
              "Ref": "app"
            }
          },
          {
            "Key": "env",
            "Value": {
              "Ref": "env"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "SiteURL": {
      "Value": {
        "Fn::GetAtt": [
          "S3BucketSite",
          "WebsiteURL"
        ]
      },
      "Description": "URL for website hosted on S3"
    }
  }
}
